#!/bin/bash

PORT=${1:-4444}
UPDATES_PORT=${2:-4445}
FILE=${3:-index.html}
HTTP="HTTP/1.1"
STATUS="200"
HEADER="Server: custom\r\n"
HTTP_OK="$HTTP $STATUS\r\n$HEADER\r\n"
WS_HEADER="Connection: Upgrade\r\nUpgrade: websocket\r\n"
WS_UPGRADE="$HTTP 101 Switching Protocols\r\n$WS_HEADER\r\n"

rm .updates 2> /dev/null; mkfifo .updates

host_file () {
  while :
  do
    serve_file $1 $2
  done
}

serve_file() {
  nc -l $1 < <(cat <(echo -e "$2") $3)
}

(host_file $PORT $HTTP_OK $FILE) &
(host_file $UPDATES_PORT $WS_UPGRADE .updates)