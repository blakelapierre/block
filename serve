#!/bin/bash

PORT=${1:-4444}
UPDATES_PORT=${2:-4445}
FILE=${3:-index.html}
HTTP="HTTP/1.1"
STATUS="200"
HEADER="Server: custom\r\n"

rm .updates 2> /dev/null; mkfifo .updates

(while :
  do
    nc -l $PORT < <(cat <(echo -e "$HTTP $STATUS\r\n$HEADER\r\n") $FILE)
  done)

  &

(while :
  do
    nc -l $UPDATES_PORT < <(echo "hi")
  done)