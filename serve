#!/bin/bash

PORT=${1:-4444}
UPDATES_PORT=${2:-4445}
FILE=${3:-index.html}
HTTP="HTTP/1.1"
STATUS="200"
HEADER="Server: custom\r\n"
HTTP_OK="$HTTP $STATUS\r\n$HEADER\r\n"

rm .updates 2> /dev/null; mkfifo .updates

host () {
  while :
  do
    serve_file $1 $2
  done
}

serve_file() {
  nc -l $1 < <(cat <(echo -e "$HTTP_OK") $2)
}

(host $PORT $FILE) &
(host $UPDATES_PORT .updates)
